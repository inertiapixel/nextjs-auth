{
    "compilerOptions": {
      "target": "ESNext",                         // Use modern JavaScript features
      "module": "ESNext",                         // Output modern ES modules
      "lib": ["DOM", "ESNext"],                   // Enable DOM and latest JS features
      "declaration": true,                        // Emit `.d.ts` files for consumers
      "declarationDir": "dist",                   // Output dir for types
      "outDir": "dist",                           // Output dir for compiled JS
      "jsx": "react-jsx",                         // New JSX transform (React 17+)
      "moduleResolution": "Node",                 // Node-style module resolution
      "esModuleInterop": true,                    // Enable interop with CommonJS
      "allowSyntheticDefaultImports": true,       // Support synthetic default imports
      "skipLibCheck": true,                       // Skip type checks on .d.ts files
      "forceConsistentCasingInFileNames": true,   // Avoid cross-OS casing issues
      "strict": true                             // Enable strict type checking,
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "example"]
  }
  